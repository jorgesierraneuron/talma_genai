# Use lightweight Python 3.11 image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY ./app .

# Create the "serve" script to run the model
RUN echo '#!/bin/bash\nexec python3 predict.py' > /usr/bin/serve && chmod +x /usr/bin/serve

# Expose the port required by SageMaker
EXPOSE 8080

# Set entrypoint to match SageMaker expectations
ENTRYPOINT ["serve"]

